@import 'common'

#web
#mobile
  display none

body
  &[data-application='web']
    #web
      display block
    &[data-state='loading']
      overflow hidden
    &[data-state='done']
      overflow visible

  &[data-application='mobile']
    #mobile
      display block

.preloader
  occupy(fixed)
  background white
  z-index z-preloader
  opacity 1
  transition opacity 0.5s
  &[data-state='done']
    opacity 0

.preloader--logo
  display block
  position absolute
  width 250px
  height 50px
  top grid-offset
  left 50%
  margin-left (-(@width / 2))

@keyframes spin
  100%
    transform rotate(360deg)

.preloader--spinner
  background white
  width 38px
  height 7px
  position absolute
  top 50%
  left 50%
  margin-top (-(@height / 2))
  margin-left (-(@width / 2))
  animation spin 2s infinite linear
